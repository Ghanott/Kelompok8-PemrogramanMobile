<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".home.MenuDetailButtomSheet">


    <View
        android:layout_width="50dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:background="#DDDDDD" />


    <ImageView
        android:id="@+id/imgFoodDetail"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/ayam_geprek" />


    <TextView
        android:id="@+id/tvNameDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Paket Geprek 10K"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Paket Geprek 10K" />


    <LinearLayout
        android:id="@+id/layoutQtyPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/btnMinus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="-"
            android:textSize="18sp"
            android:layout_marginEnd="8dp" />


        <TextView
            android:id="@+id/tvQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />


        <TextView
            android:id="@+id/btnPlus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="+"
            android:textSize="18sp"
            android:layout_marginEnd="16dp" />


        <TextView
            android:id="@+id/tvPriceDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 20.000"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            tools:text="Rp. 20.000" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#E0E0E0" />

    <!-- Judul deskripsi paket -->
    <TextView
        android:id="@+id/tvDeskripsiTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Deskripsi Paket"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDeskripsiProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Nasi + ayam geprek dengan sambal bawang, lalapan, dan minum."
        android:textSize="13sp"
        tools:text="Nasi + ayam geprek dengan sambal bawang, lalapan, dan minum." />


    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Tambah Ke Keranjang"
        android:textAllCaps="false"
        android:backgroundTint="@android:color/holo_green_dark"
        android:textColor="@android:color/white" />

</LinearLayout>
