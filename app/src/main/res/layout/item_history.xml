<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgHistoryFood"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ayam_geprek" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/tvHistoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paket Geprek 10K"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvHistorySubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paket Es Teh"
                android:textSize="13sp"
                android:textColor="#777" />

            <TextView
                android:id="@+id/tvHistoryUnitPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga satuan  Rp.10.000"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvHistoryTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total harga  Rp.20.000"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvHistoryStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selesai"
                android:textSize="12sp"
                android:textColor="#4CAF50" />

            <Button
                android:id="@+id/btnBeliLagi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beli Lagi"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:background="@drawable/bg_tab_kategori"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
